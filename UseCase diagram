  usecase "Ведение электронного журнала" as UC4
  usecase "Выставление оценок" as UC5
  usecase "Автоматический расчет рейтинга" as UC6
  usecase "Учет посещаемости" as UC7
  
  usecase "Управление учебными планами" as UC8
  usecase "Назначение преподавателей" as UC9
  usecase "Формирование отчетов" as UC10
  usecase "Утверждение итоговых оценок" as UC11
  
  usecase "Управление пользователями" as UC12
  usecase "Управление структурой ВУЗа" as UC13
  usecase "Настройка системы" as UC14
}

